<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="@color/review_score_unfilled_color" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/review_score_unfilled_color"
                    android:centerY="0.75"
                    android:endColor="@color/review_score_filled_color"
                    android:startColor="@color/review_score_filled_color"

                    />
            </shape>
        </clip>
    </item>


    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="8dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/review_score_filled_color"
                    android:startColor="@color/review_score_filled_color" />
            </shape>
        </clip>
    </item>
</layer-list>